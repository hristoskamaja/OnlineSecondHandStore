@model Online_Secondhand_Store.Models.Car

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="~/Content/styleHome.css" />
<link rel="stylesheet" href="~/Content/styleIndex.css?v=5.0" />

<div class="row" style="text-align:center; margin-top: 20px;">
    <h3 class="header">Are you sure you want to delete this car?</h3>

    @using (Html.BeginForm("DeleteItem", "Cars", FormMethod.Post, new { id = Model.Id }))
    {
    @Html.AntiForgeryToken()

    <div class="form-actions" style="margin-top: 20px;">
        <input type="submit" value="Delete" class="buttons" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "buttons", style = "margin-left: 10px;" })
    </div>
    }
</div>
